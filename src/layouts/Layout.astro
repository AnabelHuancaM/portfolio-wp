---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Anabel Huanca">
		<meta name="description" content="Portafolio WordPress anabelhumor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/perfil.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow">
	<!-- OPEN GRAPH -->
	<meta property="og:title" content="Portafolio WordPress - Anabel Huanca Moreano @anabelhumor">
	<meta property="og:image" content="/captura.jpg">
	<meta property="og:image:alt" content="Una captura de mi portafolio WP">

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	html {
		font-family: system-ui, sans-serif;
	}

	body{
		display: flex;
		flex-direction: column;
		height: 100vh;
		background-color: #00091d;
	}

</style>
