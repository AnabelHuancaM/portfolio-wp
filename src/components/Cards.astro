---
interface Props {
	title: string;
	body: string;
	href: string;
	img: string
}

const { href, title, body, img } = Astro.props;
---
<div class="grid grid-cols-2 text-white">
	<article class="grid p-1 pb-5 my-2 bg-gray-800 rounded-md w-full">
		<img src={img} alt={title} class="h-56 w-full object-cover rounded-sm">
		<a href={href} target="_blank">
			<h2 class="text-2xl font-semibold my-2">
				{title}
	
			</h2>
			<p class="text-pretty text-sm text-gray-200">
				{body}
			</p>
		</a>
	
	</article>

</div>

<style>
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

</style>
