---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Projects.astro';
import Hero from '../components/Hero.astro';
import SpanCard from '../components/SpanCard.astro';
import InfoIcon from '../components/icons/info.astro';
import Footer from '../components/Footer.astro';
import Projects from '../components/Projects.astro';
---

<Layout title="Portafolio WordPress | Anabel Huanca Moreano">
	<main class="m-auto">
		<Hero/>
			<SpanCard/>
		
		<article role="list" class="my-12">
			<h1 class="text-white font-bold text-2xl my-2">Mis proyectos con WordPress</h1>
			<p class="text-gray-600 flex gap-x-2 items-center">
				<InfoIcon class="size-5" />
				Se recomienda abrir con navegador Chrome
			</p>
			<Projects/>
		</article>
		
		<div class="topBlur" />
		<div class="bottomBlur" />
		<Footer/>
	</main>
</Layout>

<style>
	main {
		width: 800px;
		max-width: calc(100% - 2rem);
	}
	
    .topBlur {
    position: absolute;
    width: 35vw;
    height: 25vw;
    min-width: 350px;
    min-width: 350px;
    top: -128px;
    left: -10vw;
    border-radius: 764px;
    background: rgba(25, 55, 109, 0.7);
    filter: blur(100px);
    z-index: 0;
    }

</style>
